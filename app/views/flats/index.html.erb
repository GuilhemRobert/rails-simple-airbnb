<h1>All flats</h1>

<div class="wrapper">
  <p>You searched for <%= @search %></p>
  <div class="container">
    <% @flats.each do |flat| %>
    <div class="card">
      <div class="flat-name">
        <%= link_to flat.name, flat_path(flat) %>
      </div>
      <div class="address">
        <%= flat.address %>
      </div>
      <div class="price-and-guests">
        <ul class="list-inline">
          <li>
            <i class="fas fa-users"></i>
            <%= flat.number_of_guests %>
          </li>
          <li>
            <i class="fas fa-euro-sign"></i>
            <%= flat.price_per_night %>
          </li>
        </ul>
      </div>
      <div class="action-list">
        <%= link_to "More info", flat_path(flat) %>
        <%= link_to "Edit", edit_flat_path(flat) %>
        <%= link_to "Destroy", flat_path(flat), method: :delete %>
      </div>
    </div>
    <% end %>
  </div>
</div>


